<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SkinAnalyzerApp.Views"
    x:Class="SkinAnalyzerApp.AppShell"
    Shell.FlyoutBehavior="Disabled">

    <!-- Página inicial -->
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Shell.PresentationMode="Modal" />

    <!-- Página de registro -->
    <ShellContent
        Route="RegisterPage"
        ContentTemplate="{DataTemplate views:RegisterPage}" />

    <!-- Página principal: Productos -->
    <ShellContent
        Route="ProductosPage"
        ContentTemplate="{DataTemplate views:ProductosPage}" />

    <!-- Página para agregar o editar productos -->
    <ShellContent
        Route="AgregarProductoPage"
        ContentTemplate="{DataTemplate views:AgregarProductoPage}" />

    <!-- Página principal -->
    <ShellContent
        Route="MainPage"
        ContentTemplate="{DataTemplate views:MainPage}" />

    <!-- Página para agregar o editar categorías -->
    <ShellContent
        Route="AgregarCategoriaPage"
        ContentTemplate="{DataTemplate views:AgregarCategoriaPage}" />

    <!-- Página para ver el historial de escaneos -->
    <ShellContent
        Route="HistorialPage"
        ContentTemplate="{DataTemplate views:HistorialPage}" />

    <!-- Página para ver los detalles de los escaneos realizados -->
    <ShellContent
        Route="DetalleAnalisisPage"
        ContentTemplate="{DataTemplate views:DetalleAnalisisPage}" />

</Shell>
