<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkinAnalyzerApp.Views.HistorialPage"
             Title="Historial de AnÃ¡lisis"
             BackgroundColor="{StaticResource PageBackground}">

    <CollectionView x:Name="HistorialCollection"
                    SelectionMode="Single"
                    SelectionChanged="OnItemSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10"
                       BackgroundColor="White"
                       BorderColor="#ddd"
                       CornerRadius="12"
                       HasShadow="True">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Image Source="{Binding FotoPath}"
                               WidthRequest="80"
                               HeightRequest="80"
                               Aspect="AspectFill"
                               BackgroundColor="#eee"/>
                        <StackLayout>
                            <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy HH:mm}'}"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding TipoPiel}" />
                            <Label Text="{Binding Imperfecciones}" LineBreakMode="TailTruncation"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>