<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SkinAnalyzerApp.ViewModels"
             x:Class="SkinAnalyzerApp.Views.AgregarCategoriaPage"
             Title="Categorías de Productos">
    <ContentPage.BindingContext>
        <vm:AgregarCategoriaViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Nombre" />
        <Entry Placeholder="Nombre de la Categoría" Text="{Binding Nombre}" />

        <Label Text="Condiciones de Piel" />
        <Entry Placeholder="Codiciones de Piel a la que va Dedicada" Text="{Binding Recomendacion}" />

        <Button Text="Guardar" Command="{Binding GuardarProductoCommand}" BackgroundColor="#27ae60" TextColor="White" />
    </StackLayout>
</ContentPage>