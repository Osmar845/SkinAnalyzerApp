<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkinAnalyzerApp.Views.DetalleProductoPage"
             Title="Detalle del Producto">

    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="{Binding Nombre}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding Marca}" FontSize="18" />
            <Label Text="{Binding Presentacion}" />
            <Label Text="{Binding TipoPiel, StringFormat='Tipo de piel: {0}'}" />
            <Label Text="{Binding IngredientesActivos}" />
            <Label Text="{Binding ModoUso}" />
            <Label Text="{Binding Recomendacion}" />
            <Label Text="{Binding Precio, StringFormat='Precio: {0:C}'}" />
            <Label Text="{Binding Estado}" />
            <Label Text="{Binding FechaCaducidad, StringFormat='Caduca: {0:dd/MM/yyyy}'}" />
        </StackLayout>
    </ScrollView>
</ContentPage>